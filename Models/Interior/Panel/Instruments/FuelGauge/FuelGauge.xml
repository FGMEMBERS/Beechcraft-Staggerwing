<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>FuelGauge.ac</path>

  <animation>
    <!-- Objects Opaques -->
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
    
    <!-- Objects Transparents -->
    <object-name>vitre</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Beechcraft-C18S/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>ptrL</object-name>   
    <object-name>ptrR</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
  
  <animation> 
    <type>rotate</type>
    <object-name>ptrL</object-name>
    <property>consumables/fuel/tank[0]/level-gal_us</property>
    <factor>10</factor>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  5.000 </ind><dep> 14.0 </dep></entry>
     <entry><ind>  9.866 </ind><dep> 28.0 </dep></entry>
     <entry><ind> 17.733 </ind><dep> 59.5 </dep></entry>
     <entry><ind> 30.00 </ind><dep>  85.0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.004151 </x-m>
      <y-m> -0.033880 </y-m>
      <z-m>  0.004920 </z-m>  
    </center>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>         
 
  <animation> 
    <type>rotate</type>
    <object-name>ptrR</object-name>
    <property>consumables/fuel/tank[1]/level-gal_us</property>
    <interpolation>
     <entry><ind>   0.00 </ind><dep>  0.0 </dep></entry>
     <entry><ind>  5.000 </ind><dep> 14.0 </dep></entry>
     <entry><ind>  9.866 </ind><dep> 28.0 </dep></entry>
     <entry><ind> 17.733 </ind><dep> 59.5 </dep></entry>
     <entry><ind> 30.00 </ind><dep> 85.0 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.003891 </x-m>
      <y-m> 0.033070 </y-m>
      <z-m> 0.003870 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>         
 
</PropertyList>
